   <td style='text-align:center;'><TMPL_VAR NAME='EDIT_BUTTON'></td>
   <td style='text-align:center;'><TMPL_VAR NAME='DELETE_BUTTON'></td>
  </tr>
  </TMPL_LOOP>
 </tbody>
</table>
